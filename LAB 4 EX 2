#include <iostream>
using namespace std;     // class Queue
class Queue{
    int queueArr[10];
    int front;
    int rear;
    public:
    Queue()            // constructor for Queue
    {
         front = - 1;
         rear = - 1;
    }
    
void Insert(int val) {                                          // function to insert element
    int n=sizeof(queueArr)/sizeof(queueArr[0]);
   if (rear == n - 1)                                           // check for overflow
   cout<<"Queue Overflow"<<endl;
   else {
      if (front == - 1)
      {front = 0;

       rear=0;}
      queueArr[rear] = val;

rear++;
   }
}

void Delete() { 
   if (front == rear) {                       //check for empty
      cout<<"Queue is empty "<<endl;
      return ;
   } else {
      cout<<"Element deleted from queue is : "<< queueArr[front] <<endl;
      front++;;
   }
}
void Display() {                    //check for empty
   if (front == rear)
   cout<<"Queue is empty"<<endl;
   else {
      cout<<"Queue elements are : ";
   	  cout<<"Queue elements are : ";
      for (int i = front; i <= rear; i++)
      cout<<queueArr[i]<<" ";
         cout<<endl;
   }
}

int main() {
   int choice;
   cout<<"1) Insert element to queue"<<endl;
   cout<<"2) Delete element from queue"<<endl;
   cout<<"3) Display all the elements of queue"<<endl;
   cout<<"4) Exit"<<endl;
   do {
      cout<<"Enter your choice : "<<endl;
      cin>>choice;
      switch (choice) {
         case 1: Insert();
         break;
         case 2: Delete();
         break;
         case 3: Display();
         break;
         case 4: cout<<"Exit"<<endl;
         break;
         default: cout<<"Invalid choice"<<endl;
      }
   } while(choice!=4);
   return 0;
}
};
